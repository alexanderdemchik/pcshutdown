<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="buttonColor" format="reference|color" />
    <attr name="iconColor" format="reference|color" />
    <style name="Theme.Shutdownpc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#303f9f</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="buttonColor">?colorPrimary</item>
        <item name="iconColor">?colorOnPrimary</item>
    </style>
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?colorPrimary</item>
    </style>
</resources>